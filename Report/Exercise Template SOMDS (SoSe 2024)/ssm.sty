% Nach diss.sty von D. Strobl
% Bezeichnung der Bildunterschriften mit 'Bild'
\def\figurename{Abb.}

% Variablendefinition
\newdimen\bildunterschriftbreite
\newdimen\bildnummerbreite

% \hsize ist die aktuelle Breite
\bildunterschriftbreite=0.9\textwidth%\hsize

% Definition der Bildunterschrift
% #1 enthaelt die Bildnummer, z.B. "Bild 1.22"
% #2 enthaelt die Bildunterschrift, z.B.
%    "Regelkreis mit Stoergroesse"
% Die Definition endet mit "\fi}"
\long\def\@makefigurecaption#1#2{
\vskip 10\p@

% Es wird eine Box um #1: #2 herum definiert
\setbox\@tempboxa\hbox{\hspace*{5ex}{\bf #1} {\rmfamily\itshape #2}\hspace*{5ex}}

  % Falls die Breite der Box groesser als \hsize ist,
  % wird nach Fall 1 verzweigt, sonst nach Fall 2
  \ifdim \wd\@tempboxa >\hsize
     % Fall 1:
     % Es wird eine Box um #1: herum definiert
     % und deren Breite der Variablen \bildnummerbreite
     % zugewiesen
     \setbox\@tempboxa\hbox{\bf #1}
     \bildnummerbreite=\wd\@tempboxa

     % Es wird die folgende Berechnung ausgefuehrt:
     % \bildunterschriftbreite = \bildunterschriftbreite -
     %                           \bildnummerbreite
     \advance\bildunterschriftbreite -\bildnummerbreite
     \advance\bildunterschriftbreite -0.5ex

     % \hbox to\hsize{\hfil ... \hfil} zentriert den
     % Inhalt von ...
     \hbox to\hsize{\hfil
     \begin{tabular}{@{}p{\bildnummerbreite} @{\hspace*{0.5ex}}
                     p{\bildunterschriftbreite}}
       {\bf #1} & {\rmfamily\itshape\hspace{0mm}#2}
     \end{tabular} \par
     \hfil}
  \else
     % Fall 2:
     % Der Inhalt der Box um #1: #2 herum wird zentriert
     % (Es ist keine \tabular-Umgebung noetig, da
     % die Breite der Box kleiner als \hsize ist.)
     \hbox to\hsize{\hfil\box\@tempboxa\hfil}
\fi}

